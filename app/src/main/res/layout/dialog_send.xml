<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/transparent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/home_shape_corners_tou_black_mask_home"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:id="@+id/tv_remove"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/sure_you_want_to_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="8dp"
                android:visibility="visible"
                android:id="@+id/tv_user_name"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:text="是否申请绑定?"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
        <TextView
            android:layout_margin="8dp"
            android:id="@+id/tv_factory_settings"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:textColor="@color/the_main_color"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/restore_the_factory_Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="@color/text_blue"
                />

        </LinearLayout>
        <LinearLayout
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cancel"
                android:background="@drawable/cancel_shape_white_selector"
                android:gravity="center"
                android:textColor="@color/title"
                android:textSize="14sp"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="44dp"/>

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="44dp">

                <View
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/text_blue"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"></View>
            </LinearLayout>
            <TextView
                android:id="@+id/determine"
                android:background="@drawable/cancel_shape_white_selector"
                android:gravity="center"
                android:textColor="@color/title"
                android:textSize="14sp"
                android:text="@string/determine"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>